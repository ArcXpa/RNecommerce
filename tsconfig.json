{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "target": "ES2016",
    "module": "CommonJS",
    "jsx": "react",
    "types": ["jest", "node"],
    "paths": {
      "@/*": ["./src/*"],
    },
    "noEmitOnError": true,
  },
  "include": [
    "./src/**/*",
    "./src/@types/**/*",
    "index.d.ts",
    "declarations.d.ts",
    "react-native.config.js",
    ".eslintrc.js",
    "jest.setup.js",
    "jest.config.js",
    "babel.config.js",
    "index.js"
  ]
}
